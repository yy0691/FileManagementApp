<Window x:Class="FileManagementApp.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileManagementApp"
        mc:Ignorable="d"
        Title="文件复制进度" Height="140" Width="500" MinWidth="500" MinHeight="140">
    <Grid Width="500" Height="120">

        <TextBlock Text="复制中……" Foreground="#FFc08eaf" Margin="20,15,20,0" VerticalAlignment="Top" MinWidth="85" MinHeight="16" FontFamily="PingFang TC" Height="17" />
        <ProgressBar x:Name="ProgressBar" Background="#FFF5F5F5" Foreground="#90c08eaf" BorderBrush="#50c08eaf" Height="24" VerticalAlignment="Center" MinWidth="400" MinHeight="25" Margin="20,0,20,0" />
        <Button Content="取消" Foreground="#FFc08eaf" Background="#FFF5F5F5" BorderBrush="#50c08eaf" BorderThickness="1.5" Width="50" Height="25" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,89,0,0" Click="CancelButton_Click" FontFamily="PingFang TC Medium" />
    </Grid>
</Window>
