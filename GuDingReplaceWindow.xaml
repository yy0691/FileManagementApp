<Window x:Class="FileManagementApp.GuDingReplaceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileManagementApp"
        mc:Ignorable="d"
        Title="GuDingReplaceWindow" Height="300" Width="250">
    <Grid>
        <!-- 固定文本显示 -->
        <TextBlock Text="待替换学校名称：" FontSize="14" Margin="10,65,0,0" VerticalAlignment="Top"/>
        <TextBlock Text="待替换日期：" FontSize="14" Margin="10,130,0,0" VerticalAlignment="Top"/>

        <!-- 可编辑文本框 -->
        <TextBox x:Name="NewSchoolNameTextBox" Margin="10,88,10,172" FontSize="14" Height="25" VerticalAlignment="Center"/>
        <TextBox x:Name="NewDateTextBox" Margin="10,153,10,0" FontSize="14" Height="27" VerticalAlignment="Top"/>

        <!-- 确认按钮 -->
        <Button Content="确认替换" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,197,0,0" Click="OnConfirmReplace" Height="20" Width="74"/>
        <ProgressBar x:Name="ProgressBar" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Margin="10,0,10,10" Height="20" Minimum="0" Maximum="100" Value="0"/>
    </Grid>
</Window>
